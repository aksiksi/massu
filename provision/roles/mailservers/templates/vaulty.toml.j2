# Vaulty config file in TOML format
# Everything commented out is optional

# port = 7777
db_name = "{{ vaulty_db_name }}"

# Just take first DB server
db_host = "{{ hostvars[groups['dbservers'][0]].ansible_host }}"

db_user = "{{ vaulty_db_user }}"
# db_password = PASSWORD
# mailgun_key = YOUR_TOKEN

# HTTP basic auth creds (unused)
auth_user = "{{ vaulty_user }}"
auth_pass = "{{ vaulty_pass }}"
server_address = "{{ inventory_hostname }}"

# Force server to use TLS
use_tls = true
cert_path = "/etc/letsencrypt/live/{{ inventory_hostname }}/fullchain.pem"
key_path = "/etc/letsencrypt/live/{{ inventory_hostname }}/privkey.pem"
